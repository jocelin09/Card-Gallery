        <activity
            android:name=".Pan.PanCardDetails"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_pan_card_details"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Passport.PassportActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:label="Passport" />
        <activity
            android:name=".Passport.PassportDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_passport_details"
